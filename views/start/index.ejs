<%- include('../partials/head')%>
<%- include('../partials/navbar')%>

<div class="container my-5">

    <h1 class="display-3">Database</h1>
    <hr>

    <% for (let hero of heroes) { %>
    <h2 class="display-6"><%= hero.name %></h2>
    <p class="">Alias: <%= hero.alias %></p>
    <p class="">Universe: <%= hero.universe %></p>
    
    <p class="h4">Stats:</p>
    <ul class="list-group col-8 col-sm-6 col-lg-3 col-xl-2">
        <li class="list-group-item d-flex justify-content-between align-items-center">
            IQ
            <span class="badge bg-success rounded-pill"><%= hero.stats.iq %></span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Strength
            <span class="badge bg-success rounded-pill"><%= hero.stats.strength %></span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Speed
            <span class="badge bg-success rounded-pill"><%= hero.stats.speed %></span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Magic
            <span class="badge bg-success rounded-pill"><%= hero.stats.magic %></span>
        </li>
    </ul>

    <hr>
    
    <% } %>

</div>

<%- include('../partials/footer')%>