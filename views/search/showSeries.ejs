<div class="container my-5">
    <div class="row row-cols-auto d-flex justify-content-center px-5">
        <% for (let result of results) { %> 
            <div class="col col-sm-5 col-lg-3 col-xl-2 m-3 text-center bg-secondary text-white p-2 rounded">
                <img src=<%= result.thumbnail.path + "/detail.jpg" %> class="mb-2 mw-100">
                <p><%= result.title %></p>
                <p><%= result.issueNumber %></p>
            </div>
        <% } %>
    </div>
</div>