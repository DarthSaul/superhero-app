<% layout('./layouts/boilerplate')%>

<div class="container my-5 d-flex flex-wrap justify-content-center">

    <div class="col col-lg-6">

        <h1 class="display-1">Search</h1>

        <form action="/search" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" aria-describedby="heroName" required>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>  
        </form>

    </div>
    <% if (character) { %> 
        <div class="col-8 mt-5">
            <hr>
            <h1>Search Result:</h1>

            <div class="card mb-3">
                <div class="row g-0">
                  <div class="col-md-4">
                    <img src="<%= character.thumbnail %>" alt="hero-image">
                  </div>
                  <div class="col-md-8">
                    <div class="card-body mr-auto">
                      <h5 class="card-title"><%= character.name%></h5>
                      <p class="card-text"><%= character.description%></p>
                    </div>
                  </div>
                </div>
            </div>
            
        </div>
    <% } %> 
</div>
