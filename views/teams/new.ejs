<% layout('./layouts/boilerplate')%>

<div class="container my-5 col-md-8 col-lg-6">
    
    <%- include('../partials/flash') %>
    
    <h1 class="display-2">New Team</h1>

    <form action="/teams" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="name" class="form-label">Choose a name for your Marvel Ultimate Team</label>
            <input type="text" class="form-control" id="name" name="team[name]" aria-describedby="heroName" placeholder="i.e. The Avengers" required>
        </div>
        <div class="mb-3">
            <label for="hqLocation" class="form-label">HQ Location</label>
            <input type="text" class="form-control" id="hqLocation" name="team[hqLocation]" required>
        </div>
        <div class="mb-3">
            <label for="bio" class="form-label">Provide a brief bio</label>
            <textarea type="text" class="form-control" id="bio" name="team[bio]" rows="5" required></textarea>
        </div>
        <div class="mb-3">
            <label for="logo" class="form-label">Add Logo File</label>
            <input type="file" class="form-control" id="logo" name="logo">
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
        
    </form>

</div>